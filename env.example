# QuantLink FREN Narrator Configuration
# Copy this file to .env and customize the values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Application Settings
DEFAULT_CRYPTO_ID=bitcoin
DEFAULT_VS_CURRENCY=usd

# Server Configuration (for VPS deployment)
HOST=0.0.0.0
PORT=8000

# Gunicorn Configuration (for production)
WORKERS=4
WORKER_TIMEOUT=120

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Custom temp directory for audio files
TEMP_AUDIO_DIR=/tmp/quantlink-audio 